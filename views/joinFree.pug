extends layout

block content
   div.join-container
       div.join-left-container
           h1 Ready to Earn your Worth?
           i.fas.fa-arrow-circle-right
       div.join-right-container
           div.join-form-main
               h1 Create Account
               div.join-form-container
                   form(action='/users/join', method='post', class='join-form-right')
                       include partials/form_message
                       div(data-role='fieldcontain')
                           label(for='name') Name: #[br]
                               input(id='name',type='text',placeholder='Enter Name',name='name',value=typeof (name) != 'undefined' ? name : '', required)

                       div(data-role='fieldcontain')
                            label(for='username') Username: #[br]
                                input(id='username',type='text',placeholder='Enter Username',name='username',value=typeof(username) != 'undefined' ? username : '', required)

                       div(data-role='fieldcontain')
                           label(for='email') Email Address: #[br]
                               input(id='email',type='email',placeholder='Enter Email',name='email',value=typeof(email) != 'undefined' ? email : '', required)

                       div#passworddiv(data-role='fieldcontain')
                           label(for='password') Password: #[br]
                               input(id='password',type='password',placeholder='Enter Password',name='password',value=typeof(password) != 'undefined' ? password : '', required)

                       div(id='hiddendiv',data-role='fieldcontain')
                           label(for='hidden_password') Confirm Password: #[br]
                               input(id='hidden_password',type='password',placeholder='Confirm Password',name='password2',value=typeof(password2) != 'undefined' ? password2 : '', required)

                       div(data-role='fieldcontain')
                           input(type='submit',value='Sign Up',data-transition='fade', data-theme='c', id='submit-button')

                   div.join-form-left
                       button.fab.fa-facebook-f
                       p or
                       button.fab.fa-google-plus-g
                       p or
                       button.fab.fa-linkedin-in
                       p or
                       button.fab.fa-twitter
                       p Already have an account?
                       a(href='/login') Login


